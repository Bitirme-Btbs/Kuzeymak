@using Bitirme.Models
@model List<DagıtımOlcu>
@{
    ViewBag.Title = "Index";
}


<table id="mytbl" class="table table-striped">
    <thead>
        <tr>
            <th scope="col">Faaliyet Maliyet Etkeni Ad</th>
            <th scope="col">Sil</th>
            <th scope="col">Güncelle</th>

        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td> @item.DagıtımOlcu_Ad </td>
                <td>@Html.ActionLink("Sil", "Remove", new { id = item.DagıtımOlcu_Id }, new { @class = "btn btn-warning" })</td>
                <td>@Html.ActionLink("Güncelleme", "Details", new { id = item.DagıtımOlcu_Id }, new { @class = "btn btn-success" })</td>

            </tr>
        }
    </tbody>
</table>
@Html.ActionLink("Yeni Faaliyet Maliyet Etkeni Ekle", "Create", "DagıtımOlcu")
